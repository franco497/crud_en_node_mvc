<%- include ../layouts/cabecera.ejs %>
    
    <div class="card">
        <div class="card-header"></div>
        <div class="card-body">
            <br>
            <a href="/libros/crear" class="btn btn-primary" type="button">Crear un nuevo libro</a>
            <br>
            <br>
            <table class="table table-primary">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nombre</th>
                    <th>Imagen</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>

                <% for(let libro=0;libro<libros.length;libro++){ %> 
                 
                    <tr>
                        <td><%= libros[libro].id %></td>
                        <td><%= libros[libro].nombre %></td>

                        <td>
                            <img class="img-thumbnail" width="100" src="images/<%= libros[libro].imagen %>" alt="">
                         </td>
                        
                        <td>
                            
                            
                            <div class="btn-group-vertical" role="group" aria-label="Vertical button group">

                                <form action="/libros/editar/<%= libros[libro].id %>" method="get" class="form-inline">

                                    <button class="btn btn-success" type="submit">Editar</button>

                                </form>

                           </div>
                            
                            |
                            
                            <div class="btn-group-vertical" role="group" aria-label="Vertical button group">

                                 <form action="/libros/eliminar/<%= libros[libro].id %>" method="post" class="form-inline">

                                     <button class="btn btn-danger" type="submit">Borrar</button>

                                 </form>

                            </div>
                        
                        </td>
                    </tr>
                        

                <% } %>    
                
            </tbody>
        </table>
    </div>
    
    
        </div>
        <div class="card-footer text-muted"></div>
    </div>
    
    
    
        <div
        class="table-responsive"
    >
    

    <%- include ../layouts/pie.ejs %>